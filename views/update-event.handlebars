<div class="column">
  <div>
      <label style="margin-left:10px;font:normal 16px arial;">{{send.address}}</label>
    </div>
      <div>
      <img src="/images/{{send.like}}.png" style="margin-left:10px;width:30px" /><label style="font:bold 16px arial;margin-left:10px;">{{send.likes}}</label>
    </div>

  <h2 class="title">Update Event</h2><hr />
  <form class="event-form">
    <div>
      <label for="type-event">type:</label>
      <select id="type-event" >{{send.eventselect}}</select>
    </div>
    <div>
      <label for="startdate-event">start date:</label>
      <input type="text" id="startdate-event" class="datepicker" value="{{send.event.event_start_dt}}">
    </div>
    <div>
      <label for="enddate-event">end date:</label>
      <input type="text" id="enddate-event" class="datepicker" value="{{send.event.event_end_dt}}">
    </div>
     <div>
      <label for="starttime-event">start time:</label>
      <input type="text" id="starttime-event" class="timepicker" value="{{send.event.event_start_time}}"/>
    </div>   
     <div>
      <label for="endtime-event">end time:</label>
      <input type="text" id="endtime-event" class="timepicker" value="{{send.event.event_end_time}}"/>
    </div>   
    <div>
      <button type="submit" class="button">update</button>
     <a href="/" ><button class="button">cancel</button>
    </div>
  </form>
</div>

<script src="/js/update-event.js"></script>
