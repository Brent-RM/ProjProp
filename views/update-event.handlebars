<div class="column">
  <div>
    <label
      id="propertyId"
      style="margin-left:10px;font:normal 16px arial;"
      data-id="{{send.event.id}}"
    >{{send.address}}</label>
  </div>
  <div>
    <img
      src="/images/{{send.like}}.png"
      style="margin-left:10px;width:30px"
    /><label
      style="display:inline-block;font:bold 16px arial;margin-left:10px;"
    >{{send.reviews}}</label>
  </div>

  <h2 class="title">Update Event</h2><hr />
  <form class="event-form">
    <div>

      <label for="type-event">Type:</label>
      <select
        id="type-event"
        style="width: 100%; height:41px; border-radius:6px"
      ><option value="">Choose</option><option {{send.option1}} value="1">Xmas
          Lights</option><option
          {{send.option2}}
          value="2"
        >Halloween</option><option {{send.option3}} value="3">Garage Sale</option></select>
    </div>
    <div>
      <label for="startdate-event">Start Date:</label>
      <input
        type="text"
        id="startdate-event"
        class="datepicker"
        value="{{format_date send.event.event_start_dt}}"
      />
    </div>
    <div>
      <label for="enddate-event">End Date:</label>
      <input
        type="text"
        id="enddate-event"
        class="datepicker"
        value="{{format_date send.event.event_end_dt}}"
      />
    </div>
    <div>
      <label for="starttime-event">Start Time:</label>
      <input
        type="text"
        id="starttime-event"
        class="timepicker"
        value="{{send.event.event_start_time}}"
      />
    </div>
    <div>
      <label for="endtime-event">End Time:</label>
      <input
        type="text"
        id="endtime-event"
        class="timepicker"
        value="{{send.event.event_end_time}}"
      />
    </div>
    <div>
      <label for="image-event">Photo:</label>
      <input id="image-event" type="file" />
      <br /><img
        id="myImg"
        src="/images/house{{send.id}}.jpeg"
        style="width:100%"
      />
      <br /><br />
    </div>
    <div>
      <button id="update_btn" type="submit" class="button">Update</button>
    </div>
  </form>
  <a href="/"><button class="button">Cancel</button></a>
</div>

<script src="/js/update-event.js"></script>